<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :kitchen_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
        <%= form.select :kitchen_id, options_from_collection_for_select(Kitchen.all.order(:name), :id, :name, product.kitchen_id), class: "form-control form-control-lg" %>
    </div>
  </div>

  <div>
    <%= form.label :type_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
        <%= form.select :type_id, options_from_collection_for_select(Type.all.order(:name), :id, :name, product.type_id), class: "form-control form-control-lg" %>
    </div>
  </div>

  <div>
    <%= form.submit "Guardar", :class => "btn btn-primary" %>
  </div>
<% end %>
