<div class="row <%= cycle('bg-light', 'bg-success bg-opacity-10') -%>">
  <div class="col-1 overflow-hidden order-md-0">
    <h2><%= link_to order.table.name, order, :class => "text-dark" %></h2>
  </div>
  <div class="col order-md-1">
    <h3><%= link_to order.id, order, :class => "text-dark" %></h3>
  </div>
  <div class="col-12 col-md-2 order-last order-md-2">
    <%= order.customer %>
  </div>
  <div class="col-2 order-md-3">
    <%= order.observations %>
  </div>
  <div class="col order-md-4">
    <%= order.guests %>
  </div>
  <div class="col order-md-5">
    <span class="d-inline-flex px-2 py-2 fw-semibold <%= order.alive? ? 'bg-success border-success' : 'bg-warning border-warning' %> bg-opacity-10 border border-opacity-10 rounded-2 "><%= link_to order.status, order, class: "text-dark" %></span>
  </div>
</div>
