    <%= link_to content_tag(:i, " ", :class => "bi bi-pencil"), edit_customer_path(customer), :class => "btn btn-warning ", :title => "Modificar", 'data-bs-toggle' => "tooltip", 'data-bs-placement' => "bottom", 'data-controller' => "turbo" %>

    <%= link_to content_tag(:i, " ", :class => "bi bi-trash-fill"), customer_path(customer), :class => "btn btn-danger", data: { 'turbo-method' => :delete, :turbo_confirm => "Â¿Estas seguro?", 'bs-toggle' => "tooltip", 'bs-placement' => "bottom"  }, :title => "Anular" %>

  </td>
